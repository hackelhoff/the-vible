{
  "name": "the-vible",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:prod": "vite build --mode production",
    "preview:prod": "vite preview --mode production",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "node scripts/test-suite.js",
    "test:performance": "lighthouse http://localhost:5173 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'",
    "test:build": "npm run build && npm run preview",
    "test:docker": "docker-compose up --build -d && sleep 10 && curl -f http://localhost:80 || exit 1",
    "test:accessibility": "node scripts/test-suite.js accessibility",
    "test:bundle": "node scripts/analyze-bundle.js",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "test:all": "npm run test && npm run test:performance && npm run test:docker",
    "validate": "npm run lint && npm run build && npm run test:accessibility",
    "predeploy": "npm run validate",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy.sh",
    "monitor": "./scripts/monitor.sh",
    "monitor:continuous": "./scripts/monitor.sh continuous",
    "launch-prep": "./scripts/launch-prep.sh",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "health:check": "curl -f http://localhost:3000/health && curl -f http://localhost:3001/health && curl -f http://localhost:80/health"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.539.0",
    "morgan": "^1.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.29.2",
    "typescript": "^5.6.3",
    "vite": "^5.3.4",
    "vite-bundle-analyzer": "^0.7.0"
  }
}
